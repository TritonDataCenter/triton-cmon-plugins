#!/bin/bash

# Parse arguments to handle -z flag
zone=""
while [[ $# -gt 0 ]]; do
    case "$1" in
        -z)
            zone="$2"
            shift 2
            ;;
        *)
            shift
            ;;
    esac
done

# Return different outputs based on zone
if [[ "$zone" == "global" ]]; then
    # Global zone SMF services
    cat << EOF
disabled
legacy_run
legacy_run
